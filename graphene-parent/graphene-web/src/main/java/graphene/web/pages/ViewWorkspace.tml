<!DOCTYPE html [<!ENTITY nbsp "&#160;">]>
<html t:type="graphene/layout" title="Contact ${contact}"
	xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd"
	xmlns:p="tapestry:parameter">

<style>
<!--
-->
.ui-buttonset .ui-button {
	margin-left: 0;
	margin-right: 0em;
}

table {
	border: none;
	border-collapse: collapse;
}

table td {
	border-right: 1px solid #EEEEEE;
	border-left: 1px solid #EEEEEE;
	border-bottom: 1px solid #888888;
}

.pivotlink {
	max-width: 200px;
	white-space: normal;
}
</style>
<section id="widget-grid" class="">
	<div class="row">
		<article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
			<!-- Start results area -->
			<t:if test="currentSelectedWorkspace">
				<div class="jarviswidget jarviswidget-color-darken" id="wid-id-1"
					data-widget-sortable="false" data-widget-deletebutton="false"
					data-widget-editbutton="false" data-widget-colorbutton="false">
					<header>
						<span class="widget-icon"> <i class="fa fa-table"></i>
						</span>
						<h2>Workspace:</h2>
						<h2 style="font-weight: bold;">${currentSelectedWorkspace?.title}</h2>
						<h2>Last Modified</h2>
						<h2 style="font-weight: bold;">
							<t:graphene.jodatimeoutput
								value="currentSelectedWorkspace?.modified" style="LL" />
						</h2>
					</header>
					<!-- widget div-->
					<div>

						<!-- widget content -->
						<div class="widget-body no-padding">

							<div class="widget-body-toolbar"></div>
							<t:jquery.datatable t:id="queryList" t:source="list"
								t:row="currentQuery" t:model="model" t:options="options"
								class="table table-striped table-bordered table-hover table-responsive"
								t:rowsPerPage="200" t:empty="block:emptyResults">

								<p:attributeListCell>
									<t:loop source="currentQuery.attributeList"
										value="currentTuple">
						${currentTuple.searchType}: ${currentTuple.value} <br />
									</t:loop>
								</p:attributeListCell>

								<p:timeInitiatedCell>
									<t:graphene.jodatimeoutput value="currentQuery.timeInitiated"
										formatter="ISODate" />
								</p:timeInitiatedCell>
										[Grid here]
							</t:jquery.datatable>

							<t:block t:id="emptyResults">
								<div id="noentitys">(No results found)</div>
							</t:block>

						</div>
						<!-- end widget content -->
					</div>
					<!-- end widget div -->
				</div>
			</t:if>
			<!-- end results area -->
		</article>
	</div>


</section>


</html>
