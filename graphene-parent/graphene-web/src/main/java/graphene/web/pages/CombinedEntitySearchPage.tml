<!DOCTYPE html [<!ENTITY nbsp "&#160;">]>
<html t:type="graphene/layout" title="Entity Search"
	xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd"
	xmlns:p="tapestry:parameter" lang="en">
<!-- Most of the page content, including <head>, <body>, etc. tags, comes 
		from Layout.tml -->
<!-- This is a span 10 in the bootstrap layout. You just need to add one 
		or more fluid rows here. -->
<style>
<!--
-->
.ui-buttonset .ui-button {
	margin-left: 0;
	margin-right: 0em;
}

table {
	border: none;
	border-collapse: collapse;
}

table td {
	border-right: 1px solid #EEEEEE;
	border-bottom: 1px solid #888888;
}
.legend{
	margin-right: 3px;
}
.pivotlink {
	max-width: 400px;
	white-space: normal;
}
</style>
<section id="widget-grid" class="">
	<div class="row">
		<article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
			<!-- Start results area -->
			<t:if test="populatedTableResults">
				<div class="jarviswidget jarviswidget-color-darken" id="wid-id-1"
					data-widget-sortable="false" data-widget-deletebutton="false"
					data-widget-editbutton="false" data-widget-colorbutton="false" 
					data-widget-collapsebutton="false"  data-widget-fullscreenbutton="false">
					<header>
						<span class="widget-icon"> <i class="fa fa-table"></i>
						</span>
						<h2>Results</h2>
						<h2>[ Showing ${results.numberOfResultsReturned} hits out of
							${results.numberOtResultsTotal} ] for ${searchValue} in ${searchTypeFilter}</h2>
						<!-- <t:graphene.ui.searchlegend /> -->
					</header>
					<!-- widget div-->
					<div>

						<!-- widget content -->
						<div class="widget-body no-padding">
							<div class="widget-body-toolbar"></div>
							<t:jquery.datatable t:id="resultsdt"
								t:source="populatedTableResults" t:model="model"
								t:row="currentEntity" t:options="options"
								class="table table-striped table-bordered table-hover table-responsive"
								t:rowsPerPage="20" t:empty="block:emptyResults">

								<p:rankCell>
									 ${rank}
								</p:rankCell>
								
								<p:actionsCell>
									<t:if test="mediaPageLink">
										<a href="${mediaPageLink}" page="prop:mediaPageLink"
											context="mediaId" target="mediaId"  title="${score}">
											<img height="150" width="150" src="${mediaThumbnail}">
											</img>
											<!-- <i class="fa fa-folder-open-o"/> ${mediaId} -->
										</a>
										<br />
										<p:else>Report View Unavailable</p:else>
									</t:if>

									<a class="btn btn-action" href="${extLink}" target="graph-${mediaId}">
										<i class="fa fa-code-fork"> </i> Graph
									</a>
								</p:actionsCell>

 								<p:usernameCell>
 									<a href="${getNamePivotLink(mediaOwner)}" class="btn btn-xs pivotlink">
										${mediaOwner}
									</a>
								</p:usernameCell>
								
								<p:createdTimeCell>
									${mediaCreatedTime}
								</p:createdTimeCell>
								
 								<p:captionTextCell>
 									${mediaCaption}
								</p:captionTextCell>
								
								<p:likeCountCell>
									${mediaLikeCount}
								</p:likeCountCell>
								
								<p:commentCountCell>
									${mediaCommentCount}
								</p:commentCountCell>
								
								<p:hashtagsCell>
									<t:loop source="hashTagsInComments" value="currentHashTag">
										<a href="${getNamePivotLink(currentHashTag.first)}" class="btn btn-xs pivotlink">
											${currentHashTag.first}
										</a>
									</t:loop>
									<t:loop source="hashTagsInCaption" value="currentHashTag">
										<a href="${getNamePivotLink(currentHashTag.first)}" class="btn btn-xs pivotlink">
											${currentHashTag.first}
										</a>
									</t:loop>
								</p:hashtagsCell>
								
								<p:atsCell>
									<t:loop source="atsInComments" value="currentAt">
										<a href="${getNamePivotLink(currentAt.first)}" class="btn btn-xs pivotlink">
											${currentAt.first}
										</a>
									</t:loop>
									<t:loop source="atsInCaption" value="currentAt">
										<a href="${getNamePivotLink(currentAt.first)}" class="btn btn-xs pivotlink">
											${currentAt.first}
										</a>
									</t:loop>
								</p:atsCell>
								
								<p:locationCell>
									${mediaLocationName}
									<t:if test="mediaLocationLatLon">
									<br/>${mediaLocationLatLon}
									</t:if>
								</p:locationCell>
								
							</t:jquery.datatable>

							<t:block t:id="emptyResults">
								<div id="noentitys">(No results found)</div>
							</t:block>

						</div>
						<!-- end widget content -->
					</div>
					<!-- end widget div -->
				</div>
			</t:if>
			<!-- end results area -->
		</article>
	</div>
</section>
</html>